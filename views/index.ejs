<%- include('header'); -%>

    <div class="video-container">

        <!-- The video -->
        <video autoplay muted loop>
            <source src="/public/videos/sky.mp4" type="video/mp4">
        </video>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Weather-Forecast</a>
                <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">About</a>
                        </li>
                    </ul>

                </div>

            </div>
        </nav>
        
        <p class="error"><%= error %></p>

        <!-- Search box -->
        <div class="search-bar">
            <div class="city-input">
                <form action="/" method="post" class="d-flex">
                    <input class="form-control me-2" autocomplete="off" type="text" name="city"
                        placeholder="Search City ...">
                    <button type="submit"><img src="/public/images/search.svg" alt=""></button>
                </form>
                <hr id="hr-above">
            </div>

            <!-- City Details -->
            <div class="city-details">
                <h4 id="city-name">
                    <img style="width: 25px; height: 25px; margin-bottom: 5px;" src="/public/images/geo-alt-fill.svg"
                        alt="">
                    <%= city_name %>
                </h4>
                <hr id="hr-below">
                <p id="day-date">
                    <%= todaysDetail %>
                </p>
            </div>

            <!-- Weather Details -->
            <div class="weather-details">
                <h1>
                    <%= temp %>
                </h1>
                <hr id="hr-below-temp">
                <img style="height: 70px;" src="<%= weatherIcon %>" alt="">
                <h5>
                    <%= weatherCondition %>
                </h5>
                <h5>
                    <%= maxTemp %> <img style="width: 25px; height: 75px; margin-bottom: 5px;"
                            src="/public/images/thermometer-high.svg" alt=""> | <img
                            style="width: 25px; height: 75px; margin-bottom: 5px;"
                            src="/public/images/thermometer-low.svg" alt="">
                        <%= minTemp %>
                </h5>

            </div>

            <!-- Additional Weather Details -->
            <div class="more-data row">
                <div class="feels-like col">
                    <h3>
                        <%= feels %>
                    </h3>
                    <span>Feels Like</span>
                </div>
                <div class="humidity col">
                    <h3>
                        <%= speed %>
                    </h3>
                    <span>Wind Speed</span>
                </div>
                <div class="humidity col">
                    <h3>
                        <%= humid %>
                    </h3>
                    <span>Humidity</span>
                </div>
            </div>
        </div>

    </div>
    <%- include('footer'); -%>

    <!-- JavaScript link -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>